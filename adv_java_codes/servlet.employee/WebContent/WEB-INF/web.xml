<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>servlet.employee</display-name>

	<servlet>
		<servlet-name>employee-list</servlet-name>
		<servlet-class>servlet.employee.EmployeeServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>employee-list</servlet-name>
		<url-pattern>/employees</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>employee-detail</servlet-name>
		<servlet-class>servlet.employee.EmployeeDetails</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>employee-detail</servlet-name>
		<url-pattern>/employee</url-pattern>
	</servlet-mapping>


</web-app>